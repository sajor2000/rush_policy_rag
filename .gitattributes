# Auto detect text files and perform LF normalization
* text=auto

# Source code - force LF
*.py text eol=lf
*.ts text eol=lf
*.tsx text eol=lf
*.js text eol=lf
*.jsx text eol=lf
*.json text eol=lf
*.yml text eol=lf
*.yaml text eol=lf
*.md text eol=lf
*.txt text eol=lf
*.html text eol=lf
*.css text eol=lf
*.scss text eol=lf
*.sh text eol=lf
*.bash text eol=lf

# Configuration files
*.env text eol=lf
*.env.* text eol=lf
*.config.* text eol=lf
.gitignore text eol=lf
.gitattributes text eol=lf
.prettierrc text eol=lf
.eslintrc* text eol=lf
Dockerfile text eol=lf
Makefile text eol=lf

# Binary files - do not modify
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.webp binary
*.pdf binary
*.woff binary
*.woff2 binary
*.ttf binary
*.eot binary
*.zip binary
*.tar binary
*.gz binary

# Linguist overrides for GitHub language statistics
docs/* linguist-documentation
*.md linguist-documentation
infrastructure/* linguist-detectable=false

# Lock files - generated, do not diff
package-lock.json -diff
yarn.lock -diff
pnpm-lock.yaml -diff
requirements.txt -diff linguist-generated

# Large generated files
*.min.js -diff linguist-generated
*.min.css -diff linguist-generated
