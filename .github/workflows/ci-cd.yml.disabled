name: RUSH Policy RAG - CI/CD Pipeline

# =============================================================================
# REQUIRED GITHUB SECRETS FOR DEPLOYMENT
# =============================================================================
# Configure these in Settings → Secrets and Variables → Actions:
#
# AZURE_CREDENTIALS        - Azure Service Principal JSON
# AZURE_RESOURCE_GROUP     - Resource group name (e.g., rush-policy-rg)
# BACKEND_URL              - Backend URL (e.g., https://rush-policy-backend.azurecontainerapps.io)
#
# NOTE: Environment variables (AOAI, Search, Storage, Cohere) must be configured
# in Azure Container Apps via Bicep template (infrastructure/azure-container-app.bicep).
# Run the Bicep deployment FIRST to create Container Apps with required env vars:
#
#   az deployment group create \
#     --resource-group $AZURE_RESOURCE_GROUP \
#     --template-file infrastructure/azure-container-app.bicep \
#     --parameters @parameters.json
#
# Required Bicep parameters:
#   - searchEndpoint, searchApiKey (Azure AI Search)
#   - aoaiEndpoint, aoaiApiKey (Azure OpenAI)
#   - storageConnectionString (Azure Blob Storage)
#   - cohereRerankerEndpoint, cohereRerankerApiKey (Cohere Rerank)
#   - containerImage (from GHCR after first build)
# =============================================================================

on:
  push:
    branches: [main, develop]
  pull_request:
    branches: [main, develop]

env:
  BACKEND_IMAGE: ghcr.io/${{ github.repository }}/backend
  FRONTEND_IMAGE: ghcr.io/${{ github.repository }}/frontend
  PYTHON_VERSION: '3.12'
  NODE_VERSION: '20'

jobs:
  # =============================================================================
  # TESTING & VALIDATION
  # =============================================================================
  test-backend:
    name: Test Backend
    runs-on: ubuntu-latest

    steps:
      - name: Checkout code
        uses: actions/checkout@v4

      - name: Set up Python
        uses: actions/setup-python@v5
        with:
          python-version: ${{ env.PYTHON_VERSION }}
          cache: 'pip'
          cache-dependency-path: apps/backend/requirements.txt

      - name: Install dependencies
        working-directory: apps/backend
        run: |
          python -m pip install --upgrade pip
          # Use lightweight test requirements (excludes heavy ML deps like docling/torch)
          pip install -r requirements-test.txt

      - name: Run tests
        working-directory: apps/backend
        run: |
          pytest tests/ -v --cov=app --cov-report=xml --cov-report=term || true
        continue-on-error: true

  test-frontend:
    name: Test Frontend
    runs-on: ubuntu-latest

    steps:
      - name: Checkout code
        uses: actions/checkout@v4

      - name: Set up Node.js
        uses: actions/setup-node@v4
        with:
          node-version: ${{ env.NODE_VERSION }}
          cache: 'npm'
          cache-dependency-path: apps/frontend/package-lock.json

      - name: Install dependencies
        working-directory: apps/frontend
        run: npm ci --legacy-peer-deps

      - name: TypeScript type checking
        working-directory: apps/frontend
        run: npm run check
        continue-on-error: true

      - name: Lint
        working-directory: apps/frontend
        run: npm run lint || true
        continue-on-error: true

      - name: Build
        working-directory: apps/frontend
        env:
          NEXT_PUBLIC_API_URL: http://localhost:8000
        run: npm run build

  # Security scanning (non-blocking for private repos)
  security-scan:
    name: Security Scan
    runs-on: ubuntu-latest

    steps:
      - name: Checkout code
        uses: actions/checkout@v4

      - name: Run Trivy vulnerability scanner
        uses: aquasecurity/trivy-action@master
        with:
          scan-type: 'fs'
          scan-ref: '.'
          format: 'table'
          severity: 'CRITICAL,HIGH'
          exit-code: '0'
        continue-on-error: true

      - name: Python dependency check
        working-directory: apps/backend
        run: |
          pip install safety
          safety check || true
        continue-on-error: true

  # =============================================================================
  # BUILD DOCKER IMAGES
  # =============================================================================
  build-backend:
    name: Build Backend Image
    needs: [test-backend, test-frontend]
    runs-on: ubuntu-latest
    if: github.event_name == 'push'
    outputs:
      image-tag: ${{ steps.meta.outputs.tags }}
      image-digest: ${{ steps.build.outputs.digest }}

    steps:
      - name: Checkout code
        uses: actions/checkout@v4

      - name: Set up Docker Buildx
        uses: docker/setup-buildx-action@v3

      - name: Log in to GitHub Container Registry
        uses: docker/login-action@v3
        with:
          registry: ghcr.io
          username: ${{ github.actor }}
          password: ${{ secrets.GITHUB_TOKEN }}

      - name: Extract metadata
        id: meta
        uses: docker/metadata-action@v5
        with:
          images: ${{ env.BACKEND_IMAGE }}
          tags: |
            type=ref,event=branch
            type=sha,prefix=sha-
            type=raw,value=latest,enable={{is_default_branch}}

      - name: Build and push Docker image
        id: build
        uses: docker/build-push-action@v5
        with:
          context: ./apps/backend
          push: true
          tags: ${{ steps.meta.outputs.tags }}
          labels: ${{ steps.meta.outputs.labels }}
          cache-from: type=gha
          cache-to: type=gha,mode=max
          platforms: linux/amd64

  build-frontend:
    name: Build Frontend Image
    needs: [test-backend, test-frontend]
    runs-on: ubuntu-latest
    if: github.event_name == 'push'
    outputs:
      image-tag: ${{ steps.meta.outputs.tags }}

    steps:
      - name: Checkout code
        uses: actions/checkout@v4

      - name: Set up Docker Buildx
        uses: docker/setup-buildx-action@v3

      - name: Log in to GitHub Container Registry
        uses: docker/login-action@v3
        with:
          registry: ghcr.io
          username: ${{ github.actor }}
          password: ${{ secrets.GITHUB_TOKEN }}

      - name: Extract metadata
        id: meta
        uses: docker/metadata-action@v5
        with:
          images: ${{ env.FRONTEND_IMAGE }}
          tags: |
            type=ref,event=branch
            type=sha,prefix=sha-
            type=raw,value=latest,enable={{is_default_branch}}

      - name: Build and push Docker image
        uses: docker/build-push-action@v5
        with:
          context: ./apps/frontend
          push: true
          tags: ${{ steps.meta.outputs.tags }}
          labels: ${{ steps.meta.outputs.labels }}
          cache-from: type=gha
          cache-to: type=gha,mode=max
          platforms: linux/amd64
          build-args: |
            BACKEND_URL=${{ secrets.BACKEND_URL || 'https://rush-policy-backend.azurecontainerapps.io' }}

  # =============================================================================
  # DEPLOY TO STAGING (Azure Container Apps)
  # =============================================================================
  deploy-staging:
    name: Deploy to Staging
    needs: [build-backend, build-frontend]
    runs-on: ubuntu-latest
    if: github.ref == 'refs/heads/develop'
    environment:
      name: staging
      url: https://rush-policy-frontend-staging.azurecontainerapps.io

    steps:
      - name: Checkout code
        uses: actions/checkout@v4

      - name: Azure Login
        uses: azure/login@v2
        with:
          creds: ${{ secrets.AZURE_CREDENTIALS }}

      - name: Deploy Backend to Azure Container Apps
        uses: azure/container-apps-deploy-action@v1
        with:
          containerAppName: rush-policy-backend-staging
          resourceGroup: ${{ secrets.AZURE_RESOURCE_GROUP }}
          imageToDeploy: ${{ needs.build-backend.outputs.image-tag }}

      - name: Deploy Frontend to Azure Container Apps
        uses: azure/container-apps-deploy-action@v1
        with:
          containerAppName: rush-policy-frontend-staging
          resourceGroup: ${{ secrets.AZURE_RESOURCE_GROUP }}
          imageToDeploy: ${{ needs.build-frontend.outputs.image-tag }}

      - name: Run smoke tests
        run: |
          echo "Running smoke tests against staging..."
          sleep 30
          curl -f https://rush-policy-backend-staging.azurecontainerapps.io/health || echo "Backend not ready"
          curl -f https://rush-policy-frontend-staging.azurecontainerapps.io || echo "Frontend not ready"
        continue-on-error: true

  # =============================================================================
  # DEPLOY TO PRODUCTION (Azure Container Apps)
  # =============================================================================
  deploy-production:
    name: Deploy to Production
    needs: [build-backend, build-frontend]
    runs-on: ubuntu-latest
    if: github.ref == 'refs/heads/main'
    environment:
      name: production
      url: https://rush-policy-frontend-production.azurecontainerapps.io

    steps:
      - name: Checkout code
        uses: actions/checkout@v4

      - name: Azure Login
        uses: azure/login@v2
        with:
          creds: ${{ secrets.AZURE_CREDENTIALS }}

      - name: Deploy Backend to Azure Container Apps
        uses: azure/container-apps-deploy-action@v1
        with:
          containerAppName: rush-policy-backend-production
          resourceGroup: ${{ secrets.AZURE_RESOURCE_GROUP }}
          imageToDeploy: ${{ needs.build-backend.outputs.image-tag }}

      - name: Deploy Frontend to Azure Container Apps
        uses: azure/container-apps-deploy-action@v1
        with:
          containerAppName: rush-policy-frontend-production
          resourceGroup: ${{ secrets.AZURE_RESOURCE_GROUP }}
          imageToDeploy: ${{ needs.build-frontend.outputs.image-tag }}

      - name: Health check
        run: |
          echo "Waiting for services to be healthy..."
          sleep 60
          for i in {1..10}; do
            if curl -sf https://rush-policy-backend-production.azurecontainerapps.io/health; then
              echo "Backend is healthy"
              break
            fi
            echo "Attempt $i: Backend not ready, waiting 10s..."
            sleep 10
          done

      - name: Create deployment tag
        if: success()
        run: |
          git config user.name github-actions
          git config user.email github-actions@github.com
          TAG="v$(date +%Y%m%d-%H%M%S)"
          git tag -a $TAG -m "Production deployment $TAG"
          git push origin $TAG
        continue-on-error: true
