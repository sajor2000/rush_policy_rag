# =============================================================================
# RUSH Policy RAG - Environment Variables Template
# =============================================================================
# Copy this file to .env and fill in your actual values
# Never commit .env to version control!

# =============================================================================
# AZURE AI SEARCH
# =============================================================================
SEARCH_ENDPOINT=https://policychataisearch.search.windows.net
SEARCH_API_KEY=your_search_api_key_here

# =============================================================================
# AZURE OPENAI
# =============================================================================
AOAI_ENDPOINT=https://your-aoai-resource.openai.azure.com/
AOAI_API=your_aoai_api_key_here
AOAI_CHAT_DEPLOYMENT=gpt-4.1
AOAI_EMBEDDING_DEPLOYMENT=text-embedding-3-large

# =============================================================================
# AZURE AI FOUNDRY (unified AI platform)
# =============================================================================
AZURE_AI_PROJECT_ENDPOINT=https://your-ai-services.services.ai.azure.com/api/projects/your-project

# =============================================================================
# AZURE STORAGE
# =============================================================================
STORAGE_CONNECTION_STRING=DefaultEndpointsProtocol=https;AccountName=your_account;AccountKey=your_key;EndpointSuffix=core.windows.net
CONTAINER_NAME=policies-active

# =============================================================================
# AGENTIC RETRIEVAL (optional)
# =============================================================================
USE_AGENTIC_RETRIEVAL=false

# Persistent Foundry Agent ID (created via scripts/create_foundry_agent.py)
# Run: python scripts/create_foundry_agent.py
# Then copy the agent_id from the output
FOUNDRY_AGENT_ID=

# Legacy settings (kept for reference, not needed with persistent agent)
# KNOWLEDGE_AGENT_NAME=rush-policy-agent
# KNOWLEDGE_SOURCE_NAME=rush-policies

# =============================================================================
# OBSERVABILITY
# =============================================================================
APPLICATIONINSIGHTS_CONNECTION_STRING=InstrumentationKey=your_key;IngestionEndpoint=https://your_region.in.applicationinsights.azure.com/

# =============================================================================
# ADMIN & SECURITY
# =============================================================================
ADMIN_API_KEY=your_secure_admin_key_here

# =============================================================================
# BACKEND CONFIGURATION
# =============================================================================
BACKEND_PORT=8000
CORS_ORIGINS=http://localhost:3000,http://localhost:5000,http://127.0.0.1:3000

# =============================================================================
# FRONTEND CONFIGURATION
# =============================================================================
NEXT_PUBLIC_API_URL=http://localhost:8000
NODE_ENV=development
